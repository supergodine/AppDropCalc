{
  "name": "dropcalc-backend",
  "version": "1.0.0",
  "description": "DropCalc - API Backend para Calculadora de Precificação em Dropshipping",
  "author": "DropCalc Team",
  "private": true,
  "license": "MIT",
  "main": "dist/main.js",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "@types/bcrypt": "^5.0.1",
    "@types/express": "^4.17.20",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^7.0.3",
    "@types/passport-google-oauth20": "^2.0.12",
    "@types/passport-jwt": "^3.0.10",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^11.10.0",
    "helmet": "^7.1.0",
    "node-mailjet": "^6.0.11",
    "nodemailer": "^7.0.10",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "start:dev": "nodemon --exec ts-node src/main.ts",
    "typeorm:migration:run": "npx ts-node ./node_modules/typeorm/cli.js migration:run --dataSource src/database/data-source.ts",
    "typeorm:migration:run:prod": "node ./node_modules/typeorm/cli.js migration:run --dataSource dist/database/data-source.js"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": []
}
