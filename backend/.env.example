# Variáveis de Ambiente - Backend DropCalc
# Copie este arquivo para .env e configure suas variáveis

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/dropcalc"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_USERNAME="postgres"
DATABASE_PASSWORD="postgres123"
DATABASE_NAME="dropcalc"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# OAuth Google Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# Exchange Rate APIs
EXCHANGE_API_KEY="your-openexchangerates-api-key"
EXCHANGE_API_BASE_URL="https://openexchangerates.org/api"

# Alternative Exchange APIs (fallback)
EXCHANGERATE_API_BASE_URL="https://api.exchangerate-api.com/v4"

# Application Configuration
NODE_ENV="development"
PORT=3001
API_PREFIX="api"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Redis Configuration (opcional para cache)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Swagger Documentation
SWAGGER_TITLE="DropCalc API"
SWAGGER_DESCRIPTION="API para Calculadora de Precificação em Dropshipping"
SWAGGER_VERSION="1.0.0"
SWAGGER_PATH="api/docs"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DEST="./uploads"

# Email Configuration (futuro)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""

# Webhook URLs (futuro)
# STRIPE_WEBHOOK_SECRET=""
# MERCADOPAGO_WEBHOOK_SECRET=""